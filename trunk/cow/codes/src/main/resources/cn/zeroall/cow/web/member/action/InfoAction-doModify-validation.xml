<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="name">
        <field-validator type="stringlength">
            <param name="maxLength">16</param>
            <message>昵称最大为16个字符</message>
        </field-validator>
    </field>
    <field name="sex">
        <field-validator type="regex">
            <param name="trim">false</param>
            <param name="expression">[M|F]</param>
            <message>性别为男或者女</message>
        </field-validator>
    </field>
    <field name="country">
        <field-validator type="stringlength">
            <param name="maxLength">4</param>
            <message>国家最多为4个字符</message>
        </field-validator>
    </field>
    <field name="province">
        <field-validator type="stringlength">
            <param name="maxLength">4</param>
            <message>省份最多为4个字符</message>
        </field-validator>
    </field>
    <field name="city">
        <field-validator type="stringlength">
            <param name="maxLength">4</param>
            <message>城市最多为4个字符</message>
        </field-validator>
    </field>
    <field name="area">
        <field-validator type="stringlength">
            <param name="maxLength">4</param>
            <message>地区最多为4个字符</message>
        </field-validator>
    </field>
    <field name="address">
        <field-validator type="stringlength">
            <param name="maxLength">128</param>
            <message>地址最多为128个字符</message>
        </field-validator>
    </field>
    <field name="telphone">
        <field-validator type="stringlength">
            <param name="maxLength">16</param>
            <message>电话号码最多为16个字符</message>
        </field-validator>
    </field>
    <field name="mobile">
        <field-validator type="regex">
            <param name="trim">false</param>
            <param name="expression">[0-9]{11}</param>
            <message>请填写正确的手机号码</message>
        </field-validator>
    </field>
</validators>