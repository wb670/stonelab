<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>weblab</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:weblab.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


	<servlet>
		<servlet-name>click</servlet-name>
		<servlet-class>org.apache.click.extras.spring.SpringClickServlet</servlet-class>
		<init-param>
			<param-name>inject-page-beans</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>

	<servlet>
		<servlet-name>test</servlet-name>
		<servlet-class>com.alibaba.weblab.test.web.Test</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>click</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>test</servlet-name>
		<url-pattern>/test/test</url-pattern>
	</servlet-mapping>

</web-app>
