<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="helloworld" version="2.4">

	<!-- listener -->
	<listener>
		<listener-class>com.alibaba.helloworld.example.listener.VersionListener</listener-class>
	</listener>

	<!-- filter -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.alibaba.helloworld.example.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>HtmlLayoutFilter</filter-name>
		<filter-class>com.alibaba.helloworld.example.filter.HtmlLayoutFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/example/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HtmlLayoutFilter</filter-name>
		<url-pattern>/example/*</url-pattern>
	</filter-mapping>

	<!-- servlet -->
	<servlet>
		<servlet-name>HelloWorldServlet</servlet-name>
		<servlet-class>com.alibaba.helloworld.example.servlet.HelloWorldServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CnHelloWorldServlet</servlet-name>
		<servlet-class>com.alibaba.helloworld.example.servlet.CnHelloWorldServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TicketServlet</servlet-name>
		<servlet-class>com.alibaba.helloworld.example.servlet.TicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorldServlet</servlet-name>
		<url-pattern>/example/HelloWorldServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CnHelloWorldServlet</servlet-name>
		<url-pattern>/example/CnHelloWorldServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TicketServlet</servlet-name>
		<url-pattern>/example/TicketServlet</url-pattern>
	</servlet-mapping>

</web-app>