<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="helloworld">
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<display-name>EncodingFilter</display-name>
		<filter-class>com.alibaba.helloworld.example.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>HtmlLayoutFilter</filter-name>
		<display-name>HtmlLayoutFilter</display-name>
		<filter-class>com.alibaba.helloworld.example.filter.HtmlLayoutFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/example/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>HtmlLayoutFilter</filter-name>
		<url-pattern>/example/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>
			com.alibaba.helloworld.example.listener.VersionListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>HelloWorldServlet</servlet-name>
		<display-name>HelloWorldServlet</display-name>
		<servlet-class>com.alibaba.helloworld.example.servlet.HelloWorldServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CnHelloWorldServlet</servlet-name>
		<display-name>CnHelloWorldServlet</display-name>
		<servlet-class>com.alibaba.helloworld.example.servlet.CnHelloWorldServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloWorldServlet</servlet-name>
		<url-pattern>/example/HelloWorldServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CnHelloWorldServlet</servlet-name>
		<url-pattern>/example/CnHelloWorldServlet</url-pattern>
	</servlet-mapping>
</web-app>
